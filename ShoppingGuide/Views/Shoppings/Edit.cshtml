@model ShoppingGuide.DbModels.Shopping

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Purchase user @ViewData["customerName"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label asp-for="DatePurchase" class="control-label"></label>
                <input asp-for="DatePurchase" class="form-control" />
                <span asp-validation-for="DatePurchase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SumReciept" class="control-label"></label>
                <input asp-for="SumReciept" class="form-control" />
                <span asp-validation-for="SumReciept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
        <h3>Фото покупки</h3>
        <form asp-action="AddFile" asp-controller="Shoppings" asp-route-method="Edit" method="post" enctype="multipart/form-data">
            <input type="file" name="uploadedFile" /><br>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Загрузить" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.CustomerId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
